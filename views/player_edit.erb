<h1>Update <%=@player.player_name() %> Player record </h1>

<form action="/players/<%= @player.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="player_name">Edit Player name:</label>
  <input id="player_name" name="player_name" type="text">

  <button type="submit" class="btn btn-sm btn-primary">Update</button>
</form>

<form action="/players/<%= @player.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-sm btn-danger">Fire player</button>
</form>

<p><a href="/">Return to Main Page</a></p>
